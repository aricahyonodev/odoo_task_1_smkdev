<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="room_class_action" model="ir.actions.act_window">
        <field name="name">Daftar Ruangan</field>
        <field name="res_model">room.class</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="room_class_view_tree" model="ir.ui.view">
        <field name="name">room.class.view.tree</field>
        <field name="model">room.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="room_name" />
                <field name="room_capacity" />
                <field name="building_id" />
                <field name="building_name" />
            </tree>
        </field>
    </record>

    <record id="room_class_view_form" model="ir.ui.view">
        <field name="name">room.class.view.form</field>
        <field name="model">room.class</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="room_name" />
                        <field name="room_capacity" />
                        <field name="building_id" />
                        <field name="building_name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
